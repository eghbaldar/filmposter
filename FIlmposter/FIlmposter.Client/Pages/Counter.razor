@page "/counter"
@rendermode InteractiveWebAssembly

<PageTitle>Counter</PageTitle>

<h1 style="color:white;">Counter</h1>

<p role="status" style="color:white;">Current count: @currentCount</p>

<button class="btn btn-primary" style="color:white;" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        Console.WriteLine($"counter={currentCount}");

    }
}
