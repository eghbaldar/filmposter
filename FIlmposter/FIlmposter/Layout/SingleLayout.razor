@inherits LayoutComponentBase
<MainHeader LogoStyle="true" />
<body>
    <div class="smooth-scroll-container">
        @* <Header LogoStyle="true" /> *@
        <div class="breadcrumb-area bg-gray">
            <div class="container">
                <div class="breadcrumb-item">
                    <div class="breadcrum-shape">
                        <img src="/SiteTemplate/img/shape/bg-shape-3.png" alt="شکل" />
                    </div>
                    <div class="row">
                        <div class="col-lg-8 frame">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li>
                                        <a href="blog-3-colum.html##"><i class="fas fa-home"></i> خانه</a>
                                    </li>
                                    <li class="active">وبلاگ</li>
                                </ol>
                            </nav>
                            <h1>@subTitle</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>        
        <!-- ✅ Cascading the Parent Layout to child components -->
        <CascadingValue Value="this" IsFixed="true">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <AdminNavBar/>
                        @Body
                    </div>
                </div>
            </div>
        </CascadingValue>
        <MainFooter LogoStyle="true"/>
    </div>
</body>

@code {
    public string? subTitle { get; set; } = "test";
    public void UpdateTitle(string title)
    {
        subTitle = title;
        StateHasChanged(); // ✅ Force UI update when title changes
    }
}
